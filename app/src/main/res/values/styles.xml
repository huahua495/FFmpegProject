<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="custom_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">#00000000</item>
    </style>

    <style name="comm_btn_layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:paddingLeft">@dimen/home_nav_btn_pad_lr</item>
        <item name="android:paddingRight">@dimen/home_nav_btn_pad_lr</item>
        <item name="android:paddingTop">@dimen/comm_mar_top</item>
        <item name="android:paddingBottom">@dimen/comm_mar_top</item>
    </style>

</resources>
